<!DOCTYPE html>
<html>
  <head>
    <title>DeviseAuth</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <% if user_signed_in? %>
      <h1>Bienvenide <%= current_user.name %></h1>
      <%= link_to 'Vete', destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to 'Registrate', new_user_registration_path  %>
      <%= link_to 'logueate', new_user_session_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
